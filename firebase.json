{
  "hosting": {
    "public": "www/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api",
        "function": "api"
      },
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/scrape",
        "function": "scrape"
      },
      {
        "source": "/scrape/**",
        "function": "scrape"
      }
    ]
  }
}
